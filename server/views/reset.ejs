<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
        <title>Garden State Film Festival Upload Portal</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="Garden State Film Festival Upload Portal" name="description" />
        <meta content="F&S Digital" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="assets/images/favicon.ico">

        <!-- App css -->
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/icons.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/app.css" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="text-center">
                        <span><img src= "/assets/img/CAN_logo_web.png" alt="" height=100px width="auto"></span>
                    </div>
                    <div class="card card-login">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0 mb-3">Reset Password</h4>
                            </div>

                            <% include ./partials/messages %>

                            <div class="row">
                                <div class="col-md-12">
                                    <form action="/users/reset/<%= token %>" method="POST">
                                      <div class="form-group">
                                        <label for="password">New Password <br> <font color="#787474"> Minimum six characters, at least one uppercase letter, one lowercase letter, and one special character. </font></label>
                                        <input type="password" id="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
                                         <!-- <meter max="4" id="password-strength-meter"></meter>
                                        <p id="password-strength-text"></p>  -->
                                      </div>
                                      <div class="form-group">
                                        <label for="confirm">Confirm Password</label>
                                        <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
                                      </div>
                                      <div class="form-group mb-0 text-center">
                                        <button class="btn btn-custom-color btn-block" type="submit"> Update Password </button>
                                    </div>
                                    </form>
                                </div>
                            </div>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-dark">Back to <a href="/" class="text-dark ml-1"><b>Log
                                        in</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <!-- Vendor js -->
    <script src="assets/js/vendor.min.js"></script>

    <!-- App js-->
    <script src="assets/js/app.min.js"></script>
    
    <!-- Strength Meter-->
        <script src="/js/password-strength-meter.js"></script>
        <script type="text/javascript" src="/js/zxcvbn.js"></script>

</body>

</html>