<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
        <title>Garden State Film Festival Upload Portal</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="Garden State Film Festival Upload Portal" name="description" />
        <meta content="F&S Digital" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="assets/images/favicon.ico">

        <!-- App css -->
        <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/icons.min.css" rel="stylesheet" type="text/css" />
        <link href="/css/app.css" rel="stylesheet" type="text/css" />

</head>

<body class="authentication-bg">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="text-center">
                        <span><img src= "/assets/img/CAN_logo_web.png" alt="" height=100px width="auto"></span>
                    </div>
                    <div class="card card-login">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0 mb-3">Reset Password</h4>
                                <p class="text-muted mb-0 font-13">Enter your email address and we'll send you an email
                                    with instructions to reset your password. </p>
                            </div>

                            <% include ./partials/messages %>

                            <form action="/users/forgot" method = "POST">

                                <div class="form-group mb-3">
                                    <label for="email">Email address</label>
                                    <input class="form-control" name ="email" type="email" id="email"
                                        placeholder="Enter your email">
                                </div>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-custom-color btn-block" type="submit"> Reset Password </button>
                                </div>

                            </form>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-dark">Back to <a href="/" class="text-dark ml-1"><b>Log
                                        in</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <!-- Vendor js -->
    <script src="assets/js/vendor.min.js"></script>
    <!-- App js-->
    <script src="assets/js/app.min.js"></script>

</body>

</html>